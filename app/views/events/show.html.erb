<!-- Notification -->
<% if notice.present? %>
  <div class="p-4 mb-4 text-sm text-green-800 bg-green-100 rounded-lg">
    <%= notice %>
  </div>
<% end %>

<!-- Event Details -->
<div class="p-6 bg-white rounded-lg shadow-md">
  <%= render @event %>
</div>

<!-- Action Buttons -->
<div class="flex items-center mt-6 space-x-4">
  <%= link_to "Edit this event", edit_event_path(@event), class: "inline-block text-blue-500 hover:text-blue-700 font-semibold underline" %>
  <span>|</span>
  <%= link_to "Back to events", events_path, class: "inline-block text-blue-500 hover:text-blue-700 font-semibold underline" %>

  <%= button_to "Destroy this event", @event, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 shadow-sm transition ease-in-out duration-150" %>
</div>
