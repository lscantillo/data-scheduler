<p class="text-green-500"><%= notice %></p>
<h1 class="text-3xl font-bold underline">
    Events
</h1>

<div id="events" class="space-y-4">
  <% @events.each do |event| %>
    <div class="p-4 rounded-lg border border-gray-300 shadow-sm">
      <%= render event %>
      <p class="mt-2">
        <%= link_to "Show this event", event, class: "text-blue-500 hover:text-blue-700 underline" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New event", new_event_path, class: "mt-4 inline-block text-white bg-blue-500 hover:bg-blue-700 px-4 py-2 rounded" %>
